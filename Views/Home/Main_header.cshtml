                </ul>
            </div>
        </div>
        <div class="div_inline_block Main_header_right_block">

            <div class="">@Html.Partial("_LoginPartial")</div>


            <div class="Main_header_basket_link">@Html.ActionLink("Корзина", "Basket_page", "Home", new { }, new { @class = "link_standart_for_div link_without_prop" })</div>


        </div>
    </div>


</div>
