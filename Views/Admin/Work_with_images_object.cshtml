@Scripts.Render("~/scripts/Work_with_images_object.js")

<div>


    @foreach (var i in (List<online_store.Models.Connect_image>)ViewBag.Images)//(online_store.Models.Connect_image)
    {
        <div class="Work_with_images_object_one_img_in" id=@string.Concat("Work_with_images_object_id_one_block_",i.Id)>
